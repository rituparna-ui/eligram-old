<%- include('./../../partials/upper.ejs',{title:'Enable 2fa'}) %>

<link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
</head>
<body style="background-color: rgba(255, 228, 196, 0.7);">
  <%- include('./../../partials/navbar2.ejs',{user}) %>
  <div class="container">
    <div class="row">
      <div class="col-3"></div>
      <div class="col-6">
        <div>
          <h2>Connect an Authenticator App</h2>
        </div>
        <div class="border border-primary p-4" 
        style="
        width: 100%; 
        border-radius: 
        25px;background-color: aliceblue;
        ">
        <h5>
          Connect an authenticator app that generates verification codes. You can use the codes when we need to verify your identity.
        </h5>
        <div>
          <ol>
            <li>Download and install an authenticator app on your mobile device.</li>
            <li>Use the app to scan this QR code.</li>
            <li>Enter the code generated by the app.</li>
          </ol>
        </div>
        <div class="m-2 text-center">
          <div>
            <img src="<%= qrBase64 %>" alt="Please Reload Page">
          </div>
        </div>
        <form action="/auth/2fa" method="post">
          <input class="form-control" type="number" name="totp" id="totp">
          <br>
          <button type="submit" class="btn btn-lg btn-danger">Enable 2FA</button>
        </form>
        </div>
      </div>
      <div class="col-3"></div>
    </div>
  </div>
  <script src="/assets/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>